<div class="modal fade" id="WRITE_MODAL" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">글쓰기</h4>
            </div>
            <form action="/board/write" id="WRITE_form" method="post">
                <div class="modal-body login-form">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control login-field" value="" placeholder="Title" id="WRITE_title">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control login-field" name="body" rows="10" placeholder="Contents"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" value="Cancel" data-dismiss="modal">
                    <input type="submit" class="btn btn-primary" value="OK">
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript">
        $(function() {
            $('#WRITE_form').submit(function() {
                $.ajax({
                    url: this.action,
                    data: $(this).serialize(),
                    method: this.method,
                    success: function(msg) {
                        console.log(msg);
                        if (msg) {
                            alert(msg);
                        } else {
                            $('#WRITE_MODAL').modal('hide');
                            location.reload();
                        }
                    }
                });

                return false;
            });
        });
    </script>
</div>
